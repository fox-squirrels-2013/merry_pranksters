  <div class="container">
    <% if session["user"] %>
      <p><%= "You are logged in as: #{session["user"]}" %></p>
      <form action="/sign_out" method="post">
        <input type="hidden" id="signing_out" value="" />
        <button><a>Sign Out</a></button>
      </div>
      </form>
    <% else %>
      <p>You are not signed in</p>
      <h2>Sign in</h2>
      <form action="/sign_in" method="post">

        <div class="signin">
          <label for="auth">Member Username</label>
          <input id="auth" name="username" type="text" value="" />
        </div>

        <div class="signin">
          <label for="auth">Member Password</label>
          <input id="auth" name="password" type="password" value="" />

        </div>
        <input type="submit" value="Go!" />
      </form>  
      <div id="">
        <button><a href="/sign_up">Sign Up!</a></button>
      </div>
    <% end %>
    <div id="sign">
    <%= erb :_navigation %>
    <br>
    <% if session["user"] %>

      <%= erb :post %>
      <%= erb :_all_posts %>
    <% else %>

      <% flash[:notice] if flash[:notice] %>

    <% end %>
  </div>
